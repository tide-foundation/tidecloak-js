{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "stripInternal": true,

    "outDir": "dist",
    "rootDir": "../..",            // keep flat: dist/index.d.ts, dist/react.d.ts

    "baseUrl": ".",
    "paths": { "@shared/*": ["../../shared/*"] },
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.test.*"]
}
