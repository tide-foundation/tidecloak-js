{
  "compilerOptions": {
    "outDir": "dist/types",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "jsx": "react-jsx",
    "allowJs": true,          // so .js files are ok in src
    "checkJs": false,
    "types": []
  },
  "include": ["src/**/*"]
}
