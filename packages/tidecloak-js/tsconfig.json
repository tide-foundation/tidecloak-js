{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "target": "ES2019",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.js",
    "dist"
  ]
}