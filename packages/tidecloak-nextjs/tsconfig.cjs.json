{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2019",
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist/cjs",
    "declarationDir": "dist/types"
  },
  "include": ["src"]
}